{
  "name": "@exmg/exmg-markdown-editor",
  "flat": true,
  "version": "8.0.3",
  "description": "Element that wrap-around marked-element to make the markdown editable",
  "main": "index.js",
  "contributors": [
    "Ex Machina Group"
  ],
  "keywords": [
    "web-components",
    "polymer",
    "typescript",
    "lit-elemnt",
    "markdown",
    "editor",
    "wysiwyg"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:ExmgElements/exmg-elements-monorepo.git"
  },
  "license": "MIT",
  "files": [
    "styles/**/*.scss",
    "exmg-*.js",
    "exmg-*.d.ts",
    "index.js",
    "index.d.ts"
  ],
  "dependencies": {
    "@polymer/iron-flex-layout": "^3.0.1",
    "@polymer/iron-icon": "^3.0.1",
    "@polymer/iron-iconset-svg": "^3.0.1",
    "@polymer/marked-element": "^3.0.1",
    "@polymer/polymer": "^3.4.1",
    "codemirror": "5.49.2",
    "lit": "^2.0.0",
    "marked": "^2.1.3"
  },
  "devDependencies": {
    "@exmg/exmg-cli": "^4.1.0",
    "@web/dev-server": "0.0.29",
    "concurrently": "^6.2.1",
    "@exmg/exmg-dialogs": "^8.0.0",
    "@exmg/exmg-form": "^8.0.0",
    "@exmg/exmg-form-drawer": "^8.0.0",
    "@polymer/iron-demo-helpers": "^3.1.0",
    "@polymer/paper-styles": "^3.0.1",
    "@polymer/test-fixture": "^4.0.2",
    "@types/chai": "^4.2.12",
    "@types/codemirror": "^0.0.79",
    "@types/marked": "^1.2.2",
    "@types/mocha": "^5.2.6",
    "@types/polymer": "^1.2.9",
    "@webcomponents/webcomponentsjs": "^2.4.4",
    "chai": "^4.2.0",
    "eslint": "^7.8.1",
    "github-markdown-css": "^3.0.1",
    "gulp": "^4.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^1.0.0",
    "mocha": "^6.2.3",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2",
    "wct-mocha": "^1.1.0",
    "web-animations-js": "^2.3.2"
  },
  "scripts": {
    "package-install": "npm i",
    "gen-docs": "typedoc --excludeNotExported --excludeExternals --excludePrivate --excludeProtected --ignoreCompilerErrors --exclude '{**/*test*,**/node_modules/**,**/test/**}' --out docs/ *.ts",
    "tsc:watch": "tsc -b ./tsconfig.json --watch",
    "tsc": "tsc -b ./tsconfig.json",
    "build-styles": "exmg-cli -s \"styles/**/*.scss\"",
    "watch-styles": "exmg-cli -w",
    "build": "npm run build-styles && npm run lint && npm run tsc",
    "prepublishOnly": "npm run build",
    "preversion": "npm run build",
    "publishDryRun": "npm publish --dry-run",
    "start": "concurrently --kill-others --names tsc,web-dev-server \"npm run tsc:watch\" \"web-dev-server --app-index demo/index.html --node-resolve --open --watch\"",
    "lint": "tsc --noEmit && eslint '**/*ts' --ignore-path ../../.eslintignore -c ../../eslintrc.json --quiet --fix",
    "test-dev": "polymer test --npm -p",
    "test": "polymer test --npm --expanded"
  },
  "publishConfig": {
    "access": "public"
  }
}
