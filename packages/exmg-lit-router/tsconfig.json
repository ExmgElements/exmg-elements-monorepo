{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./",
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["es2017", "dom"],
    "typeRoots": ["node_modules/@types", "./typings"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
