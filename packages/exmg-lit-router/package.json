{
  "name": "@exmg/exmg-lit-router",
  "flat": true,
  "version": "2.1.1",
  "description": "Element that brings router to lit-html powered by vaadin/router, pwa-helpers, redux and lit-element",
  "main": "index.js",
  "contributors": [
    "Ex Machina Group"
  ],
  "keywords": [
    "web-components",
    "polymer",
    "typescript",
    "lit-elemnt",
    "router",
    "redux",
    "vaadin/router"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:ExmgElements/exmg-elements-monorepo.git"
  },
  "license": "MIT",
  "files": [
    "typings/*.d.ts",
    "scripts/**/*.js",
    "src/**/*.js",
    "src/**/*.d.ts",
    "index.js",
    "index.d.ts",
    "index-router.js",
    "index-router.d.ts"
  ],
  "dependencies": {
    "@vaadin/router": "^1.5.0",
    "lit": "^2.0.0",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@polymer/app-layout": "^3.0.2",
    "@polymer/iron-demo-helpers": "^3.0.2",
    "@polymer/paper-styles": "^3.0.1",
    "@polymer/polymer": "^3.1.0",
    "@polymer/test-fixture": "^4.0.2",
    "@types/chai": "^4.2.3",
    "@types/codemirror": "^0.0.79",
    "@types/mocha": "^5.2.5",
    "@types/polymer": "^1.2.8",
    "@types/sinon": "^7.5.0",
    "@webcomponents/webcomponentsjs": "^2.4.4",
    "chai": "^4.2.0",
    "eslint": "^7.8.1",
    "gulp": "^4.0.0",
    "gulp-rename": "^1.3.0",
    "gulp-replace": "^1.0.0",
    "mocha": "^6.2.2",
    "replace": "^1.1.1",
    "reselect": "^4.0.0",
    "sinon": "^7.5.0",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2",
    "wct-mocha": "^1.0.0"
  },
  "scripts": {
    "package-install": "npm i",
    "gen-docs": "typedoc --excludeNotExported --excludeExternals --excludePrivate --excludeProtected --ignoreCompilerErrors --exclude '{**/*test*,**/node_modules/**,**/test/**}' --out docs/ src/**/*.ts",
    "build": "npm run build-styles && npm run lint && npm run tsc",
    "tsc:watch": "tsc -b ./tsconfig.json --watch",
    "tsc": "tsc -b ./tsconfig.json",
     "build-styles": "exmg-cli -s \"styles/**/*.scss\"",
    "watch-styles": "exmg-cli -w",
    "prepublishOnly": "npm run build",
    "preversion": "npm run build",
    "publish-dry-run": "npm publish --dry-run",
    "start": "concurrently --kill-others --names tsc,web-dev-server \"npm run tsc:watch\" \"web-dev-server --app-index demo/index.html --node-resolve --open --watch\"",
    "lint": "tsc --noEmit && eslint '**/*ts' --ignore-path ../../.eslintignore -c ../../eslintrc.json --quiet --fix",
    "test-dev": "polymer test --npm -l chrome -p",
    "test": "polymer test --npm --expanded",
    "test:integration": "polymer build # test that psk builds without error with the CLI"
  }
}
