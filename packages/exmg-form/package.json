{
  "name": "@exmg/exmg-form",
  "version": "2.2.2",
  "description": "Form helper element",
  "contributors": [
    "Ex Machina"
  ],
  "keywords": [
    "web-components",
    "polymer",
    "paper",
    "token",
    "input"
  ],
  "main": "index.js",
  "files": [
    "styles/**/*.scss",
    "exmg-*.js",
    "exmg-*.d.ts",
    "index.js",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:ExmgElements/exmg-elements-monorepo.git"
  },
  "license": "MIT",
  "dependencies": {
    "@exmg/exmg-button": "^1.1.0",
    "@polymer/iron-form": "^3.0.1",
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.2"
  },
  "devDependencies": {
    "@exmg/exmg-cli": "^2.1.0",
    "@exmg/exmg-markdown-editor": "^5.1.4",
    "@exmg/exmg-paper-combobox": "^5.1.1",
    "@exmg/exmg-paper-token-input": "^5.0.4",
    "@exmg/exmg-radio-group": "^2.1.0",
    "@material/mwc-tab": "^0.10.0",
    "@material/mwc-tab-bar": "^0.10.0",
    "@polymer/iron-component-page": "^4.0.1",
    "@polymer/iron-demo-helpers": "^3.1.0",
    "@polymer/iron-flex-layout": "^3.0.1",
    "@polymer/paper-checkbox": "^3.0.2",
    "@polymer/paper-input": "^3.1.0",
    "@polymer/paper-item": "^3.0.1",
    "@polymer/test-fixture": "^4.0.2",
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.6",
    "@types/polymer": "^1.2.9",
    "@webcomponents/webcomponentsjs": "^2.4.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "gulp": "^4.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^1.0.0",
    "mocha": "^6.2.2",
    "typedoc": "^0.15.5",
    "typescript": "^3.7.4",
    "wct-mocha": "^1.0.0",
    "web-animations-js": "^2.3.1"
  },
  "scripts": {
    "package-install": "npm i",
    "gen-docs": "typedoc --excludeNotExported --excludeExternals --excludePrivate --excludeProtected --ignoreCompilerErrors --exclude '{**/*test*,**/node_modules/**,**/test/**}' --out docs/ *.ts",
    "tsc": "tsc -b ./tsconfig.json",
    "lint": "tsc --noEmit && eslint '**/*ts' --ignore-path ../../.eslintignore -c ../../eslintrc.json --quiet --fix",
    "build:styles": "gulp render-styles",
    "build": "npm run build:styles && npm run lint && npm run tsc",
    "prepublishOnly": "npm run build",
    "preversion": "npm run build",
    "publishDryRun": "npm publish --dry-run",
    "start": "npm run build:styles && gulp serve",
    "test-dev": "polymer test --npm -p",
    "test": "tsc --noEmit && polymer test --module-resolution=node --npm --expanded"
  },
  "publishConfig": {
    "access": "public"
  }
}
