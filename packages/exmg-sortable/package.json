{
  "name": "@exmg/exmg-sortable",
  "version": "4.0.3",
  "description": "Enables drag and drop sorting of items in a list or table",
  "contributors": [
    "Ex Machina Group"
  ],
  "keywords": [
    "web-components",
    "polymer",
    "sortable"
  ],
  "main": "index.js",
  "files": [
    "exmg-*.js",
    "exmg-*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:ExmgElements/exmg-elements-monorepo.git"
  },
  "dependencies": {
    "@polymer/polymer": "^3.1.0",
    "lit-element": "^2.0.1"
  },
  "devDependencies": {
    "@polymer/iron-ajax": "^3.0.1",
    "@polymer/iron-demo-helpers": "^3.0.2",
    "@polymer/test-fixture": "^4.0.2",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/polymer": "^1.2.6",
    "@webcomponents/webcomponentsjs": "^2.2.7",
    "chai": "^4.2.0",
    "gulp": "^4.0.0",
    "gulp-rename": "^1.3.0",
    "gulp-replace": "^1.0.0",
    "mocha": "^5.2.0",
    "tslint": "^5.12.1",
    "tslint-config-exmg": "^1.0.2",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3",
    "wct-mocha": "^1.0.0",
    "web-animations-js": "^2.3.1"
  },
  "scripts": {
    "gen-docs": "typedoc --excludeNotExported --excludeExternals --excludePrivate --excludeProtected --ignoreCompilerErrors --exclude '{**/*test*,**/node_modules/**,**/test/**}' --out docs/ *.ts",
    "build": "npm run lint && npm run tsc",
    "tsc": "tsc -b ./tsconfig.json",
    "lint-src": "tslint -c ./tslint.json --project ./",
    "lint-test": "tslint -c ./test/tslint.json --project ./",
    "lint": "npm run lint-src && npm run lint-test",
    "prepublishOnly": "npm run build",
    "preversion": "npm run build",
    "publishDryRun": "npm publish --dry-run",
    "start": "gulp serve",
    "test-dev": "polymer test --npm -l chrome -p",
    "test": "polymer test --npm --expanded"
  },
  "publishConfig": {
    "access": "public"
  }
}
